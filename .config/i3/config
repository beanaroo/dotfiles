#-----------------------------------#
#    Beanaroo's i3 Configuration    #
#-----------------------------------#

# Set Windows-button as modifier key.
set $mod Mod4

# Set font family.
font pango:monospace 11

# Set border size
for_window [class="^.*"] border pixel 3

# Set Gaps
gaps inner 4
gaps outer 4

# Set Compose key for special characters
exec --no-startup-id        "setxkbmap -option compose:rctrl"

#-------------------------#
#    Color Definition     #
#-------------------------#

# Define colors
set $base00     #2b303b
set $base01     #343d46
set $base02     #4f5b66
set $base03     #65737e
set $base04     #a7adba
set $base05     #c0c5ce
set $base06     #dfe1e8
set $base07     #eff1f5

set $red        #bf616a
set $orange     #d08770
set $yellow     #ebcb8b
set $green      #a3be8c
set $cyan       #96b5b4
set $blue       #8fa1b3
set $magenta    #b48ead
set $brown      #ab7967

#-------------------------#
#     Launch Bindings     #
#-------------------------#

# Application Launcher
bindsym $mod+grave exec    "rofi -show run"

# Window Switcher
bindsym $mod+Tab exec    "rofi -show window"

# Terminal
# bindsym $mod+Return exec    "i3-sensible-terminal"
bindsym $mod+Return exec    "termite -e 'tmux new-session'"

#-------------------------#
#      Function Keys      #
#-------------------------#

# Screen backlight brightness
bindsym XF86MonBrightnessUp exec    "brite up"
bindsym XF86MonBrightnessDown exec  "brite down"

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id   "pactl set-sink-volume 0 +5% \
                                                    && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id   "pactl set-sink-volume 0 -5% \
                                                    && pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id          "pactl set-sink-mute 0 toggle \
                                                    && pkill -RTMIN+10 i3blocks"

# Media player controls
bindsym XF86AudioPlay exec      "playerctl play"
bindsym XF86AudioPause exec     "playerctl pause"
bindsym XF86AudioNext exec      "playerctl next"
bindsym XF86AudioPrev exec      "playerctl previous"

# Calculator button
bindsym XF86Calculator exec     "gnome-calculator"
bindsym XF86TouchpadToggle exec     "play -q ~/Resources/Media/Sounds/beep.mp3"

# Screenshots
bindsym --release Print exec --no-startup-id        "scrot -z ~/media/pictures/screenshots/%Y-%m-%d_%k:%M:%S.png"
bindsym --release Mod1+Sys_Req exec --no-startup-id   "scrot -zu ~/media/pictures/screenshots/%Y-%m-%d_%k:%M:%S.png"
bindsym --release Shift+Print exec --no-startup-id  "scrot -zs ~/media/pictures/screenshots/%Y-%m-%d_%k:%M:%S.png"

#-------------------------#
#       Workspaces        #
#-------------------------#

# Name workspaces
set $ws1    1:
set $ws2    2:
set $ws3    3:
set $ws4    4:
set $ws5    5:
set $ws6    6:
set $ws7    7:
set $ws8    8:
set $ws9    9:
set $ws10   10:

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Move focused workspace to monitor
bindsym $mod+Shift+bracketleft move workspace to output left
bindsym $mod+Shift+bracketright move workspace to output right

#-------------------------#
#       Containers        #
#-------------------------#

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
bindsym $mod+d focus child

# Set split orientation
bindsym $mod+g split h
bindsym $mod+v split v

# Toggle container fullscreen
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Move focuses container to monitor
bindsym $mod+Shift+greater move container to output right
bindsym $mod+Shift+less move container to output left

# Resize containers
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 4 px or 4 ppt
        bindsym j resize grow height 4 px or 4 ppt
        bindsym k resize shrink height 4 px or 4 ppt
        bindsym l resize grow width 4 px or 4 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

#-------------------------#
#         Windows         #
#-------------------------#

# Window colors
#                        border      backgrnd    text       indicator
client.focused          $base03     $base03     $base05     $base03
client.focused_inactive $base00     $base00     $base05     $base00
client.unfocused        $base00     $base00     $base03     $base00
client.urgent           $red        $red        $base05     $red

# KILL focused window
bindsym $mod+Shift+q kill

# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle sticky window
bindsym $mod+Shift+s sticky toggle

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Permanent floating windows
for_window [instance="Msgcompose" class="Thunderbird"] floating enable
for_window [window_role="Preferences" class="Thunderbird"] floating enable

#-------------------------#
#     Session Control     #
#-------------------------#

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace
bindsym $mod+Shift+r restart

# exit i3
# bindsym $mod+Shift+e exec   "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes, end session.' 'i3-msg exit'"

# Power menu
set $sysmenu "  [<b>r</b>]estart - [<b>l</b>]ogout - [<b>s</b>]uspend - re[<b>b</b>]oot - po[<b>w</b>]eroff  "
bindsym $mod+Shift+e      mode $sysmenu

mode --pango_markup $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym w         exec "systemctl poweroff"
    bindsym b         exec "systemctl reboot"
    bindsym s         mode "default"; exec "systemctl suspend"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

#-------------------------#
#     Session Startup     #
#-------------------------#

# Run monitor layout script
# exec --no-startup-id    "$HOME/.local/bin/monitor-script -l \
#                         && feh --bg-scale $HOME/Pictures/Wallpapers/blurred.png"

# Lock screen
# exec --no-startup-id    "sleep 1 && $HOME/.local/bin/i3lock-blur.sh"

# Set desktop wallpaper --!! INSERTED ABOVE TO AVOID PREMATURE SETTING !!--
#exec --no-startup-id "feh --bg-scale $HOME/Pictures/Wallpapers/blurred.png"
exec --no-startup-id    "~/.fehbg"

# Start Polkit authentication agent
# exec --no-startup-id    "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"

# Removable media daemon
exec --no-startup-id    "udiskie -a"

# Auto hide mouse cursor
exec --no-startup-id    "unclutter"

# Notification Daemon
exec --no-startup-id    "dunst"

# Window Compositing
exec --no-startup-id    "compton --config $HOME/.config/compton/config"

#-------------------------#
#         i3bar           #
#-------------------------#

# Start i3bar to display a workspace bar
bar {

        position        top
        tray_output     none
        strip_workspace_numbers yes
        status_command  "i3blocks  -c $HOME/.config/i3/i3blocks.conf"

        colors {
            #                    border      backgrnd    text
            background                      $base00
            statusline                                  $base05
            separator           $base04

            focused_workspace   $base04     $base03     $base05
            active_workspace    $base03     $base02     $base04
            inactive_workspace  $base02     $base01     $base03
            urgent_workspace    $base03     $red        $base05
        }
}
